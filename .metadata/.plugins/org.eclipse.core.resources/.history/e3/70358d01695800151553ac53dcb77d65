package ch.ecal.processing.threeD;

import processing.core.PApplet;

public class Use3D extends PApplet {
	private static final long serialVersionUID = 1L;
	
	public void setup() {
		size(300, 300, P3D);
		background(200,200,30);

		
	}
	
	
	public void draw() {
		
		lights();
		pushMatrix();
		rotateY(PI/6);
		translate(width/2, height/2);
		scale(100,100,100);
		translate(0,1, 0);
		fill(20,20,150);
		noStroke();
		for (int i = 0; i < 10; i++) {
			pushMatrix();
			translate(i,0,0);
			fill(random(100),20,30);
			box(1);
			
			popMatrix();
		}
		
		popMatrix();
		
		
	}

}

